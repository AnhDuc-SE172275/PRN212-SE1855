<Window x:Class="HelloWPF.Login1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="Login1" Height="450" Width="800">
    <Grid>
        <Label Content="Màn hình đăng nhập" HorizontalAlignment="Left" Margin="338,155,0,0" VerticalAlignment="Top" FontSize="24" Foreground="#FFCA5151" Background="#FF7BC955"/>
        <Button x:Name="btnlogin" Content="Đăng nhập" HorizontalAlignment="Left" Margin="320,340,0,0" VerticalAlignment="Top" Height="67" Width="105" FontSize="20" RenderTransformOrigin="1.709,0.556" Click="btnlogin_Click"/>
        <Button x:Name="btnlogout" Content="Thoát" HorizontalAlignment="Left" Margin="525,340,0,0" VerticalAlignment="Top" Height="67" Width="105" FontSize="20" Click="btnlogout_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="372,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="39" TextChanged="TextBox_TextChanged"/>
        <PasswordBox HorizontalAlignment="Left" Margin="372,278,0,0" VerticalAlignment="Top" Width="250" Height="40" ContextMenuClosing="PasswordBox_ContextMenuClosing"/>
        <TextBox HorizontalAlignment="Left" Margin="210,222,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="123" Height="34" FontSize="20"/>
        <TextBox HorizontalAlignment="Left" Margin="211,278,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="100" FontSize="20" Height="40"/>

    </Grid>
</Window>
